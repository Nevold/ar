{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2022",
    "allowJs": true,
    "outDir": "./dist/",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["./dist/**/*", "./test/**/*"]
}
