{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist/",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "src/**/*.js", "test/**/*.ts"],
  "exclude": ["./plugins/**/*", "./typings/**/*", "./dist/**/*", "./test/**/*"]
}
